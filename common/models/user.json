{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "defaultFn": "uuidv4",
      "readOnly": true
    },
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "roleId": {
      "type": "string",
      "required": true
    },
    "locationId": {
      "type": "string"
    },
    "language": {
      "type": "string"
    },
    "changePassword": {
      "type": "boolean",
      "default": false
    }
  },
  "mixins": {
    "AuthorTimeStamp": true,
    "AuditLogger": true,
    "SoftDelete" : true
  },
  "validations": [],
  "relations": {
    "role": {
      "type": "belongsTo",
      "model": "role",
      "foreignKey": "roleId"
    },
    "location": {
      "type": "belongsTo",
      "model": "location",
      "foreignKey": "locationId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "DENY",
      "property": "deleteById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "DENY",
      "property": "patchAttributes"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_user_account",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "read_user_account",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_user_account",
      "permission": "ALLOW",
      "property": "patchAttributes"
    }
  ],
  "methods": {}
}
