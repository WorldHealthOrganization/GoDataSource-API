{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "defaultFn": "uuidv4",
      "readOnly": true,
      "unique": true
    },
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "roleIds": {
      "type": ["string"],
      "required": true
    },
    "outbreakIds": {
      "type": ["string"]
    },
    "activeOutbreakId": {
      "type": "string"
    },
    "languageId": {
      "type": "string",
      "required": true,
      "default": "english_us"
    },
    "passwordChange": {
      "type": "boolean",
      "default": true
    },
    "settings": {
      "type": {
        "caseFields": [
          "string"
        ],
        "dashboard": {
          "type": "any"
        }
      }
    },
    "securityQuestions": ["securityQuestion"]
  },
  "indexes": {
    "firstName_index": {
      "firstName": 1
    },
    "lastName_index": {
      "lastName": 1
    },
    "email_index": {
      "email": 1
    }
  },
  "mixins": {
    "ReadOnlyProperty": true,
    "UniqueValidator": true,
    "AuthorTimeStamp": true,
    "AuditLogger": true,
    "SoftDelete" : true,
    "AttachController": true,
    "IncludeCustomRelations": true
  },
  "validations": [],
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "accessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "activeOutbreak": {
      "type": "belongsTo",
      "model": "outbreak",
      "foreignKey": "activeOutbreakId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "DENY",
      "property": "deleteById"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_user_account",
      "permission": "ALLOW",
      "property": "deleteById"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_user_account",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "read_user_account",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "principalType": "ROLE",
      "principalId": "read_user_account",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_user_account",
      "permission": "ALLOW",
      "property": "patchAttributes"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "resetPassWithSecurityQuestion"
    }
  ],
  "methods": {
    "resetPassWithSecurityQuestion": {
      "accepts": [

        {
          "arg": "data",
          "type": "object",
          "http": {
            "source": "body"
          },
          "description": "An object of model property name/value pairs"
        }
      ],
      "returns": [
        {
          "arg": "data",
          "type": "object",
          "root": true,
          "required": true
        }
      ],
      "description": "Return Security Questions",
      "http": {
        "verb": "post",
        "path": "/reset-password-with-security-question"
      }
    }
  }
}
