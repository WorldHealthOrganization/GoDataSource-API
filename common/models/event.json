{
  "name": "event",
  "base": "person",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "CascadeDelete": {
      "relations": [
        {
          "relation": "relationships",
          "operations": {
            "restore": {
              "where": {
                "deletedByParent": ":FK_UUID"
              },
              "set": {
                "deletedByParent": null
              }
            },
            "delete": {
              "where": {
                "deletedByParent": {
                  "eq": null
                }
              },
              "set": {
                "deletedByParent": ":FK_UUID"
              }
            }
          }
        }
      ]
    }
  },
  "hidden": [
    "type"
  ],
  "scope": {
    "where": {
      "type": "LNG_REFERENCE_DATA_CATEGORY_PERSON_TYPE_EVENT"
    },
    "order": ["name ASC"]
  },
  "properties": {
    "type": {
      "type": "string",
      "required": true,
      "default": "LNG_REFERENCE_DATA_CATEGORY_PERSON_TYPE_EVENT",
      "readOnly": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "dateApproximate": {
      "type": "boolean"
    },
    "description": {
      "type": "string"
    },
    "address": {
      "type": "address"
    }
  },
  "indexes": {
    "address_geoLocation_index": {
      "address.geoLocation": "2dsphere"
    }
  },
  "excludeBaseProperties": [
    "firstName",
    "middleName",
    "lastName",
    "dateOfBirth",
    "age",
    "dob",
    "gender",
    "occupation",
    "addresses",
    "documents",
    "dateOfInfection",
    "dateOfOnset",
    "dateBecomeCase",
    "dateRanges",
    "classificationHistory",
    "followUpHistory",
    "dateOfOutcome",
    "dateOfBurial",
    "dateBecomeContact",
    "followUp"
  ],
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {}
}
