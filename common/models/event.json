{
  "name": "event",
  "base": "person",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "CascadeDelete": {
      "relations": [
        "relationships"
      ]
    }
  },
  "hidden": [
    "type"
  ],
  "scope": {
    "where": {
      "type": "event"
    },
    "order": ["name ASC"]
  },
  "properties": {
    "type": {
      "type": "string",
      "required": true,
      "default": "event",
      "readOnly": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "date"
    },
    "dateApproximate": {
      "type": "boolean"
    },
    "description": {
      "type": "string"
    },
    "address": {
      "type": "address"
    }
  },
  "indexes": {
    "address_geoLocation_index": {
      "address.geoLocation": "2dsphere"
    }
  },
  "excludeBaseProperties": [
    "firstName",
    "middleName",
    "lastName",
    "dateOfBirth",
    "age",
    "dob",
    "gender",
    "phoneNumber",
    "occupation",
    "addresses",
    "documents"
  ],
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {}
}
