{
  "name": "auditLog",
  "base": "extendedPersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "action": {
      "type": "string",
      "required": true
    },
    "modelName": {
      "type": "string",
      "required": true
    },
    "recordId": {
      "type": "string",
      "required": true
    },
    "changedData": {
      "type": [
        "auditLogData"
      ]
    },
    "userId": {
      "type": "string",
      "required": true
    },
    "userRole": {
      "type": "string",
      "required": true
    },
    "userIPAddress": {
      "type": "string",
      "required": true
    }
  },
  "indexes": {
    "action_index": {
      "action": 1
    },
    "modelName_index": {
      "modelName": 1
    },
    "userId_index": {
      "userId": 1
    },
    "userRole_index": {
      "userRole": 1
    },
    "userIPAddress_index": {
      "userIPAddress": 1
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "audit_log_list",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "principalType": "ROLE",
      "principalId": "audit_log_list",
      "permission": "ALLOW",
      "property": "count"
    },
    {
      "principalType": "ROLE",
      "principalId": "audit_log_export",
      "permission": "ALLOW",
      "property": "exportFilteredAuditLogs"
    }
  ],
  "methods": {
    "exportFilteredAuditLogs": {
      "accepts": [
        {
          "arg": "filter",
          "type": "object",
          "description": "Filter defining fields, where, order, offset, limit, where.useDbColumns, where.dontTranslateValues and where.jsonReplaceUndefinedWithNull - must be a JSON-encoded string ({\"something\":\"value\"}). Params 'where.useDbColumns' and 'where.dontTranslateValues' are used to display db properties and values instead of label translations (useful for scripts since translation can change). A zip file will be provided in case number of records exceed file type limits (e.g. xls (biff8) has a limit of 65536 rows). Also, if number of columns exceed file limits they will be split into multiple sheets per file (e.g. xls (biff8) has a limit of 255 columns)."
        },
        {
          "arg": "type",
          "type": "string",
          "enum": [
            "json"
          ],
          "description": "Export type; can be: json. Default: json"
        },
        {
          "arg": "encryptPassword",
          "type": "string",
          "description": "If provided, the exported file will be encrypted using aes-256-ctr algorithm using the provided password"
        },
        {
          "arg": "anonymizeFields",
          "type": [
            "string"
          ],
          "description": "If provided, mentioned fields will be anonymized in the exported file"
        },
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": [
        {
          "arg": "exportLogId",
          "type": "string",
          "required": true
        }
      ],
      "description": "Export filtered list of audit-logs",
      "http": [
        {
          "verb": "post",
          "path": "/export"
        }
      ]
    }
  }
}
