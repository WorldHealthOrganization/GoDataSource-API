{
  "name": "backup",
  "base": "extendedPersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "userId": {
      "type": "string",
      "required": true
    },
    "automatic": {
      "type": "boolean",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "modules": {
      "type": [
        "string"
      ],
      "required": true
    }
  },
  "validations": [],
  "acls": [],
  "methods": {
    "createManualBackup": {
      "accepts": [
        {
          "arg": "params",
          "description": "Backup specific params, if not given fallback on system settings",
          "type": "backupParams",
          "http": {
            "source": "body"
          },
          "root": true
        },
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": [
        {
          "arg": "backupId",
          "type": "string"
        }
      ],
      "description": "Manual backup",
      "http": {
        "verb": "post",
        "path": "/create-backup"
      }
    },
    "restoreBackup": {
      "accepts": [
        {
          "arg": "backupId",
          "type": "string"
        }
      ],
      "returns": [],
      "description": "Restore backup",
      "http": {
        "verb": "post",
        "path": "/:backupId/restore"
      }
    }
  }
}
