{
  "name": "backup",
  "base": "extendedPersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "userId": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "modules": {
      "type": [
        "string"
      ],
      "required": true
    },
    "date": {
      "type": "date"
    },
    "status": {
      "type": "number",
      "enum": [
        0,
        1,
        2
      ],
      "description": "Backup status: 0 success, 1 failed, 2 pending. Not be confused with restore, this status is for backup creation"
    }
  },
  "validations": [],
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "write_sys_config",
      "permission": "ALLOW",
      "property": "createManualBackup"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_sys_config",
      "permission": "ALLOW",
      "property": "restoreBackup"
    },
    {
      "principalType": "ROLE",
      "principalId": "read_sys_config",
      "permission": "ALLOW",
      "property": "find"
    }
  ],
  "methods": {
    "createManualBackup": {
      "accepts": [
        {
          "arg": "params",
          "description": "Backup specific params, if not given fallback on system settings",
          "type": "backupParams",
          "http": {
            "source": "body"
          },
          "root": true
        },
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": [
        {
          "arg": "backupId",
          "type": "string"
        }
      ],
      "description": "Manual backup",
      "http": {
        "verb": "post",
        "path": "/create-backup"
      }
    },
    "restoreBackup": {
      "accepts": [
        {
          "arg": "backupId",
          "type": "string"
        }
      ],
      "returns": [],
      "description": "Restore backup",
      "http": {
        "verb": "post",
        "path": "/:backupId/restore"
      }
    }
  }
}
