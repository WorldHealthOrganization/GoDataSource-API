      "permissions": "ALLOW",
      "property": "find"
    },
    {
      "principalType": "ROLE",
      "principalId": "read_sys_config",
      "permissions": "ALLOW",
      "property": "findById"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_sys_config",
      "permissions": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_sys_config",
      "permissions": "ALLOW",
      "property": "patchAttributes"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_sys_config",
      "permission": "ALLOW",
      "property": "deleteById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "count"
    },
    {
      "principalType": "ROLE",
      "principalId": "read_sys_config",
      "permission": "ALLOW",
      "property": "exportHierarchicalList"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "getHierarchicalList"
    }
