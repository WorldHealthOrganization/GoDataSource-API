{
  "name": "location",
  "base": "extendedPersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "synonyms": {
      "type": ["string"]
    },
    "active": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "populationDensity": {
      "type": "number"
    },
    "parentLocationId": {
      "type": "string",
      "default": null
    }
  },
  "validations": [],
  "relations": {
    "parentLocation": {
      "type": "belongsTo",
      "model": "location",
      "foreignKey": "parentLocationId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
