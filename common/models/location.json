{
  "name": "location",
  "base": "extendedPersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "synonyms": {
      "type": [
        "string"
      ]
    },
    "active": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "populationDensity": {
      "type": "number"
    },
    "parentLocationId": {
      "type": "string",
      "default": null
    }
  },
  "validations": [],
  "relations": {
    "parentLocation": {
      "type": "belongsTo",
      "model": "location",
      "foreignKey": "parentLocationId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permissions": "ALLOW",
      "property": "find"
    },
    {
      "principalType": "ROLE",
      "principalId": "read_sys_config",
      "permissions": "ALLOW",
      "property": "findById"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_sys_config",
      "permissions": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_sys_config",
      "permissions": "ALLOW",
      "property": "patchAttributes"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_sys_config",
      "permission": "ALLOW",
      "property": "deleteById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "count"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "exportHierarchicalList"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "getHierarchicalList"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_sys_config",
      "permission": "ALLOW",
      "property": "importHierarchicalList"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_sys_config",
      "permission": "ALLOW",
      "property": "importImportableFileUsingMap"
    }
  ],
  "methods": {
    "exportHierarchicalList": {
      "accepts": [],
      "returns": [
        {
          "arg": "body",
          "type": "file",
          "root": true,
          "required": true
        },
        {
          "arg": "Content-Type",
          "type": "string",
          "http": {
            "target": "header"
          }
        },
        {
          "arg": "Content-Disposition",
          "type": "string",
          "http": {
            "target": "header"
          }
        }
      ],
      "description": "Export hierarchical list of locations.",
      "http": {
        "verb": "get",
        "path": "/hierarchical/export"
      }
    },
    "getHierarchicalList": {
      "accepts": [],
      "returns": [
        {
          "arg": "locations",
          "type": [
            {
              "type": {
                "location": "location",
                "children": [
                  {
                    "type": {
                      "location": "location",
                      "children": []
                    }
                  }
                ]
              }
            }
          ],
          "root": true,
          "required": true
        }
      ],
      "description": "Get hierarchical list of locations.",
      "http": {
        "verb": "get",
        "path": "/hierarchical"
      }
    },
    "importHierarchicalList": {
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        },
        {
          "arg": "file",
          "type": "file",
          "description": "JSON file containing hierarchical locations list"
        },
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": [
        {
          "arg": "locations",
          "type": [
            "location"
          ],
          "root": true,
          "required": true
        }
      ],
      "description": "Import a hierarchical locations list (JSON)",
      "http": {
        "verb": "post",
        "path": "/import"
      }
    },
    "importImportableFileUsingMap": {
      "accepts": [
        {
          "arg": "body",
          "type": "object",
          "model": "importableFileWithMap",
          "http": {
            "source": "body"
          },
          "root": true
        },
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": [
        {
          "arg": "locations",
          "type": [
            "location"
          ],
          "root": true,
          "required": true
        }
      ],
      "description": "Import a hierarchical locations list coming from a flat XLS file that was previously uploaded as an importable file",
      "http": {
        "verb": "post",
        "path": "/import-importable-file-using-map"
      }
    }
  }
}
