{
  "name": "contact",
  "base": "person",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "CascadeDelete": {
      "relations": [
        "relationships",
        "followUps"
      ]
    }
  },
  "hidden": [
    "type"
  ],
  "scope": {
    "where": {
      "type": "LNG_REFERENCE_DATA_CATEGORY_PERSON_TYPE_CONTACT"
    },
    "order": ["lastName ASC", "firstName ASC"]
  },
  "properties": {
    "type": {
      "type": "string",
      "default": "LNG_REFERENCE_DATA_CATEGORY_PERSON_TYPE_CONTACT",
      "required": true,
      "readOnly": true
    },
    "firstName": {
      "type": "string",
      "required": true
    },
    "gender": {
      "type": "string",
      "required": true
    },
    "riskLevel": {
      "type": "string"
    },
    "riskReason": {
      "type": "string"
    },
    "deceased": {
      "type": "boolean",
      "default": false
    },
    "dateDeceased": {
      "type": "date"
    },
    "followUp": {
      "description": "Object containing start/end dates for the contact's follow-up period. The dates are automatically calculated based on contact relationships dates and outbreak.periodOfFollowup",
      "type": {
        "originalStartDate": {
          "description": "Date of the contact's earliest relationship (first contactDate)",
          "type": "date"
        },
        "startDate": {
          "description": "Latest contactDate of the contact's relationships",
          "type": "date"
        },
        "endDate": {
          "description": "Follow-up end date for the contact. Calculated from the startDate + outbreak.periodOfFollowup days",
          "type": "date"
        }
      }
    },
    "active": {
      "type": "boolean",
      "description": "A contact is active if at least one of the cases related to it has non-discarded classification",
      "default": true
    }
  },
  "excludeBaseProperties": [
    "name",
    "description"
  ],
  "validations": [],
  "relations": {
    "followUps": {
      "type": "hasMany",
      "model": "followUp",
      "foreignKey": "personId"
    }
  },
  "acls": [],
  "methods": {}
}
