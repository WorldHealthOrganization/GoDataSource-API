{
  "name": "language",
  "base": "extendedPersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "CascadeDelete": {
      "relations": [
        "languageTokens"
      ]
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "readOnly": {
      "type": "boolean",
      "readOnly": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "languageTokens": {
      "type": "hasMany",
      "model": "languageToken",
      "foreignKey": "languageId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_sys_config",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_sys_config",
      "permission": "ALLOW",
      "property": "patchAttributes"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_sys_config",
      "permission": "ALLOW",
      "property": "deleteById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "count"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__get__languageTokens"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__count__languageTokens"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "exportLanguageFile"
    },
    {
      "principalType": "ROLE",
      "principalId": "write_sys_config",
      "permission": "ALLOW",
      "property": "importLanguageFile"
    }
  ],
  "methods": {
    "prototype.importLanguageFile": {
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        },
        {
          "arg": "languageFile",
          "type": "file"
        },
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": [
        {
          "arg": "languageTokens",
          "type": ["languageToken"],
          "root": true
        }
      ],
      "description": "Import a translation file for a language",
      "http": {
        "verb": "post",
        "path": "/language-tokens/import"
      }
    },
    "prototype.exportLanguageFile": {
      "accepts": [],
      "returns": [
        {
          "arg": "body",
          "type": "file",
          "root": true,
          "required": true
        },
        {
          "arg": "Content-Type",
          "type": "string",
          "http": {
            "target": "header"
          }
        },
        {
          "arg": "Content-Disposition",
          "type": "string",
          "http": {
            "target": "header"
          }
        }
      ],
      "description": "Download a translation file for a language.",
      "http": {
        "verb": "get",
        "path": "/language-tokens/export"
      }
    }
  }
}
