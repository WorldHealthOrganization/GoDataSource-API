{
  "restApiRoot": "/api",
  "host": "0.0.0.0",
  "port": 3000,
  "remoting": {
    "context": false,
    "rest": {
      "handleErrors": false,
      "normalizeHttpPath": true,
      "xml": false
    },
    "json": {
      "strict": false,
      "limit": "100kb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "100kb"
    },
    "cors": false
  },
  "public": {
    "host": "localhost",
    "protocol": "http",
    "port": 3000
  },
  "passwordReset": {
    "path": "/reset-password",
    "from": "no-reply@who.int",
    "subject": "Password Reset",
    "text": "Click <a href='<%= resetHref %>'>here</a> to reset your password."
  }
}
